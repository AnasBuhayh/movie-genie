# Movie Genie Environment Configuration
# Copy this file to .env and update values for your environment

# ==========================================
# Application Ports
# ==========================================
BACKEND_PORT=5001
FRONTEND_PORT=8080
MLFLOW_PORT=5002
DOCS_PORT=8000

# ==========================================
# Backend Configuration
# ==========================================
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Secret key for Flask sessions (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=change-me-in-production-use-a-random-string

# ==========================================
# Frontend Configuration
# ==========================================
# API URL for frontend to connect to backend
# For Docker: http://backend:5001/api
# For local development: http://localhost:5001/api
VITE_API_URL=http://localhost:5001/api

# ==========================================
# MLflow Configuration
# ==========================================
MLFLOW_TRACKING_URI=sqlite:///mlflow/mlflow.db
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow/mlflow.db
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts

# ==========================================
# Python Configuration
# ==========================================
PYTHONUNBUFFERED=1

# ==========================================
# Google Analytics (Optional)
# ==========================================
GOOGLE_ANALYTICS_KEY=

# ==========================================
# Development vs Production
# ==========================================
# For development, use:
#   FLASK_ENV=development
#   VITE_API_URL=http://localhost:5001/api
#
# For production with Docker, use:
#   FLASK_ENV=production
#   VITE_API_URL=http://backend:5001/api
